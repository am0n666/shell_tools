# Aliases and such. Independent from the
# used shell (zsh, bash, ...)

alias s="sudo su"
alias t="cd huuuge_casino_tool"
alias hd="cd /data/data/com.termux/files/home/huuuge_casino_tool"
alias dc="dpkg --configure -a"
alias auu="apt update && apt -y upgrade"
alias ai="apt -y install"
alias c="clear"
alias q="exit"
alias al="apt list"
alias aes="apt edit-sources"
alias ar="apt -y remove \"$@\" && apt -y purge \"$@\" && 
apt -y autoremove"


# enable color support of ls and also add handy aliases
if [ -x /system/bin/dircolors ]; then
  test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
  alias ls='ls -a --color=auto'
  alias dir='dir --color=auto'
  alias vdir='vdir --color=auto'

  alias grep='grep --color=auto'
  alias fgrep='fgrep --color=auto'
  alias egrep='egrep --color=auto'
fi

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ls='ls -CFa'

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

